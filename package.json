{
  "name": "@akaoio/stacker",
  "version": "0.0.2",
  "description": "Universal POSIX shell framework - TypeScript + Shell hybrid architecture",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./shell": "./stacker.sh"
  },
  "bin": {
    "stacker": "./stacker.sh"
  },
  "scripts": {
    "build": "akao-build",
    "dev": "akao-build --watch", 
    "test": "tsx test/index.ts",
    "test:shell": "./tests/run-tests.sh",
    "test:typescript": "tsx test/battle-integration.test.ts",
    "test:integration": "./tests/run-tests.sh",
    "test:ci": "npm run build && npm test",
    "test:legacy": "./tests/run-tests.sh",
    "docs": "composer generate",
    "clean": "rm -rf dist/ tests/results/ logs/ tmp/",
    "prepublish": "npm run build && npm run test:ci"
  },
  "keywords": [
    "shell", 
    "posix", 
    "framework", 
    "typescript", 
    "system-management",
    "devops",
    "automation"
  ],
  "author": "AKAO.IO",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akaoio/stacker.git"
  },
  "devDependencies": {
    "@akaoio/battle": "^1.2.3",
    "@akaoio/builder": "*",
    "@types/node": "^20.19.11",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0"
  },
  "files": [
    "dist/",
    "stacker.sh",
    "stacker-loader.sh",
    "modules/",
    "templates/",
    "README.md",
    "CLAUDE.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}